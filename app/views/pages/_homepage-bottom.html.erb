<div class="homepage-bottom">
  <div class="profileSteps">
    <div class="profileStep profileStepOne">
      <div class="connect"></div>
      <div class="circle-number">1</div>
      <%= image_tag "create-icon.png", class: "icon" %>
      <div class="info">
        <h4>Create</h4>
        <p> Start Now and build the event of your choice.</p>
      </div>
    </div>
    <div class="profileStep profileStepOne">
      <div class="connect"></div>
      <div class="circle-number">2</div>
      <%= image_tag "share.png", class: "icon" %>
      <div class="info">
        <h4>Share</h4>
        <p>Share your event to your wechat friends and groups.</p>
      </div>
    </div>
    <div class="profileStep">
      <div class="connect"></div>
      <div class="circle-number">3</div>
      <%= image_tag "volunteer.png", class: "icon" %>
      <div class="info">
        <h4>Volunteers</h4>
        <p>Choose the right Volunteers for your event now!</p>
      </div>
    </div>
  </div>
  <% unless current_user %>
    <div class="SignUp" style="background-image: linear-gradient(-225deg, rgba(0, 168, 21, 0.6) 0%, rgba(0, 61, 2, 0.6) 50%), url('<%= image_path "together2.jpg" %>'); height: 130px;">
      <div class="signup-content">
        <h2>Sign Up Now & Start Creating Now!</h2>
        <%= link_to t(".sign_in", default: "Sign Up"), new_user_registration_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
