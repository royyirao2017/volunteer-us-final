<div class="main-content-container">
  <h2>Profile Page</h2>
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for @profile, url:profile_path, method: :put do |f|%>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :phone_number%>
          <%= f.input :email %>
          <%= f.input :location %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Finished",class: "btn btn-default btn-md", style:"color: #2DB94D ; font-weight: bold; width: 40%; margin-top: -30px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
