<div class="banner-container">
 <div class="login-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "together2.jpg" %>');">
   <div class="banner-content">
   <h1>Welcome to your Dashboard</h1>
     <div class="row">
       <div class="col-xs-12 col-sm-4 col-sm-offset-4">
         <%= link_to t(" new_event_url", default: "Create New Event"),new_event_url, class: "btn btn-success btn-lg" %>
       </div>
       <div class="col-xs-12 col-sm-4 col-sm-offset-4">
         <h2>Events Created:</h2>
         <% @events.each do |event| %>
           <p><%= link_to event.title, event_path(event) %></p>
         <% end %>
       </div>
     </div>
   </div>
 </div>
</div>
