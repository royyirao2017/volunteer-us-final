<div class="banner-container">
  <div class="login-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "together2.jpg" %>');">
    <div class="banner-content">
      <h2>忘记密码?</h2>
      <div class="row">
        <div class="col-xs-12">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true, placeholder: ("Enter here....") %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "重设密码",class: "btn btn-default btn-md", style:"color: #2DB94D ; font-weight: bold; width: 40%;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
