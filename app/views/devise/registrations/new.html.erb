<div class="banner-container">
  <div class="login-banner" style="background-image: url('<%= image_path "together2.jpg" %>');">
    <div class="banner-content">
      <h1> 用户注册 </h1>
      <div class="row">
        <div class="col-xs-12">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :name, label: "用户昵称", required: true %>
              <%= f.input :email, label: "电子邮箱", required: true, autofocus: true %>
              <%= f.input :password, label: "登录密码", required: true, placeholder: ("Must be a minimum of #{@minimum_password_length} characters" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: "再次输入密码", required: true %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "确定",class: "btn btn-default btn-md", style:"color: #2DB94D ; font-weight: bold; width: 40%;" %>
              <div>
                <%= link_to "已有账号登陆", new_user_session_path %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
