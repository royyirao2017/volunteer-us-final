<div class="banner-container">
  <div class="login-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "together2.jpg" %>');">
    <div class="banner-content">
      <h1> 用户注册 </h1>
      <div class="row">
        <div class="col-xs-12">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :name, required: true %>
              <%= f.input :email, required: true, autofocus: true %>
              <%= f.input :password, required: true, placeholder: ("Must be a minimum of #{@minimum_password_length} characters" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "确定",class: "btn btn-default btn-md", style:"color: #2DB94D ; font-weight: bold; width: 40%;" %>
              <div>
                <%= link_to "已有账号登陆", new_user_session_path %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
